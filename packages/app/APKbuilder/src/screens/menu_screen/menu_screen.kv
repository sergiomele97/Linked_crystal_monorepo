<MenuScreen>:
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10

            Label:
                text: "Bienvenido a la app"
                font_size: '24sp'
                size_hint_y: None
                height: self.texture_size[1]

            Button:
                text: "1. Cargar ROM (.gbc)"
                on_release: root.abrir_explorador()

            Label:
                id: label_rom
                text: "Ning√∫n ROM seleccionado"
                size_hint_y: None
                height: self.texture_size[1]

            Button:
                text: "2. Elegir servidor"
                on_release: root.elegir_servidor()
                disabled: not root.rom_cargado

            Label:
                id: label_servidor
                text: "Servidor no elegido"
                size_hint_y: None
                height: self.texture_size[1]

            Button:
                text: "3. Jugar"
                on_release: root.iniciar_juego()
                disabled: not (root.rom_cargado and root.servidor_elegido)

            Label:
                id: output_label
                text: ""
                size_hint_y: None
                height: self.texture_size[1]

        ImageButton:
            id: menuButton
            source: 'resources/image/settings.png'
            size_hint: 0.1, 0.1
            pos_hint: {"x": 0.88, "y": 0.91}
            on_release: root.open_menu(self)

