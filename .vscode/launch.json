{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run: app",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Linked_crystal/app/src/main.py",
            "cwd": "${workspaceFolder}/Linked_crystal/app/src",
            "console": "integratedTerminal"
        },
        {
            "name": "Run: server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/Linked_crystal/server/src/cmd/server",
            "console": "integratedTerminal"
        },
        {
            "name": "Run: client-mock",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Linked_crystal/server/src/client-mock/client_example.py",
            "cwd": "${workspaceFolder}/Linked_crystal/server/src/client-mock",
            "console": "integratedTerminal"
        },
        {
            "name": "Test: app",
            "type": "node-terminal",
            "request": "launch",
            "command": "./run_tests.sh",
            "cwd": "${workspaceFolder}/Linked_crystal/app"
        },
        {
            "name": "Test: server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "bash",
            "runtimeArgs": [
                "${workspaceFolder}/Linked_crystal/server/src/run_tests.sh"
            ],
            "cwd": "${workspaceFolder}/Linked_crystal/server/src",
            "console": "integratedTerminal"
        },
        {
            "name": "Script: Copy go source",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "echo",
            "runtimeArgs": [
                "Copiado al portapapeles"
            ],
            "preLaunchTask": "Copy Source to Clipboard",
            "console": "internalConsole"
        },
    ],
    "compounds": [
        {
            "name": "Run: app + server + client-mock",
            "configurations": [
                "Run: app",
                "Run: client-mock",
                "Run: server"
            ]
        }
    ]
}