{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: cliente",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/packages/app/APKbuilder/src/main.py",
            "cwd": "${workspaceFolder}/packages/app/APKbuilder/src",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: cliente-mock",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/packages/server/src/client-mock/client_example.py",
            "cwd": "${workspaceFolder}/packages/server/src/client-mock",
            "console": "integratedTerminal"
        },
        {
            "name": "Go: server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/packages/server/src",
            "console": "integratedTerminal"
        },
        {
            "name": "Go: test backend",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/packages/server/test",
            "args": [
                "-test.v"
            ],
            "cwd": "${workspaceFolder}/packages/server",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Development: Python + Go + Mock-client",
            "configurations": [
                "Python: cliente",
                "Python: cliente-mock",
                "Go: server"
            ]
        }
    ]
}