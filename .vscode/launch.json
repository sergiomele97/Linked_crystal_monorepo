{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run: app",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Linked_crystal/app/src/main.py",
            "cwd": "${workspaceFolder}/Linked_crystal/app/src",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Run: server",
            "type": "node-terminal",
            "request": "launch",
            "command": "make run-server",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run: client-mock",
            "type": "node-terminal",
            "request": "launch",
            "command": "make run-client-mock",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Test: app",
            "type": "node-terminal",
            "request": "launch",
            "command": "make test-app",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Test: server",
            "type": "node-terminal",
            "request": "launch",
            "command": "make test-server",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Script: Copy go source",
            "type": "node-terminal",
            "request": "launch",
            "command": "make copy-source",
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Run: app + server + client-mock",
            "configurations": [
                "Run: app",
                "Run: client-mock",
                "Run: server"
            ]
        }
    ]
}